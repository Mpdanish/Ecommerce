<%- include('include/_header') %>


        <%- include('include/_nav') %>

        
        <%- include('include/_topheader') %>


            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Categories</h2>
                        <p>Add, edit or delete a category</p>
                    </div>
                    <div>
                        <input type="text" placeholder="Search Categories" class="form-control bg-white" />
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <form action="/api/addcategory"  method="post">
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Category Name</label>
                                        <input type="text" placeholder="Type here" name="categoryName" class="form-control" id="product_name" />
                                    </div>
                                    <div class="d-grid">
                                        <button class="btn btn-primary">Add Category</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-9">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for( let i = 0; i < category.length; i++ ) { %>
                                                <tr>
                                                    <td>
                                                        <%= i+1 %>
                                                    </td>
                                                    <td>
                                                        <p><%= category[i].categoryname  %></p>
                                                    </td>
                                                    <td>
                                                        <p><%= category[i].status  %></p>
                                                    </td>
                                                </tr>
                                            
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- .col// -->
                        </div>
                        <!-- .row // -->
                    </div>
                    <!-- card body .// -->
                </div>
                <!-- card .// -->
            </section>


            <%- include('include/_footer') %>