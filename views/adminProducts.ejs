<%- include('include/_header') %>


        
        <%- include('include/_nav') %>


        <%- include('include/_topheader') %>

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products</h2>
        </div>
        <div>
            <a href="/adminAddProduct" class="btn btn-primary btn-sm rounded">Add Product</a>
        </div>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <div class="row align-items-center">
                <div class="col col-check flex-grow-0">
                    <div class="form-check ms-2">
                        <input class="form-check-input" type="checkbox" value="" />
                    </div>
                </div>
                <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                    <select class="form-select">
                        <option selected>All category</option>
                        <option>Electronics</option>
                        <option>Clothes</option>
                        <option>Automobile</option>
                    </select>
                </div>
                <div class="col-md-2 col-6">
                    <select class="form-select">
                        <option selected>Status</option>
                        <option>Active</option>
                        <option>Disabled</option>
                        <option>Show all</option>
                    </select>
                </div>
            </div>
        </header>
        <!-- card-header end// -->
        <div class="col-md-10">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Product Image</th>
                            <th>Product Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Category</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let i = 0; i < product.length; i++ ) { %>
                            <tr>
                                <td>
                                    <%= i+1 %>
                                </td>
                                <td>
                                    <img class="" src='<%= product[i].images[0] %>' alt="image not found">
                                </td>
                                <td>
                                    <p><%= product[i].productname  %></p>
                                </td>
                                <td>
                                    <p><%= product[i].description %></p>
                                </td>
                                <td>
                                    <p><%= product[i].price %></p>
                                </td>
                                <td>
                                    <p><%= product[i].stock %></p>
                                </td>
                                <td>
                                    <p><%= product[i].category %></p>
                                </td>
                                <td>
                                    <div class="col-lg-2 col-sm-2 col-2 col-action text-end">
                                        <a href="/adminEditProduct/<%= product[i]._id %>" class="btn btn-sm font-sm rounded btn-brand"> <i class="material-icons md-edit"></i> Edit </a>
                                    </div>
                                    <div class="col-lg-2 col-sm-2 col-2 col-action text-end"></div>
                                        <a href="#" class="btn btn-sm font-sm btn-light rounded"> <i class="material-icons md-delete_forever"></i> Delete </a>
                                    </div>
                                </td>
                            </tr>
                            
                        
                            <% } %>
                    </tbody>
                    
                </table>
            </div>
        </div>

        
        <!-- card-body end// -->
    </div>
    <!-- card end// -->
<% if (product.length!=0) { %>
 
    <div class="pagination-area mt-30 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item active"><a class="page-link" href="#">01</a></li>
            </ul>  
        </nav>
    </div>
    <% } else { %>
     
        <div>
            <h2 class="text-center text-danger">No Data Available..!!</h2>
        </div>


<% } %>
    
</section>

<%- include('include/_footer') %>