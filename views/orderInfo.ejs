            function updateOrderStatus(status, progress) {
                const orderStatusElement = document.getElementById('orderStatus');
                const orderProgressBar = document.getElementById('orderProgressBar');

                orderStatusElement.innerHTML = `<span class="font-semibold">${status.text}</span>`;
                orderProgressBar.value = progress;

                // Conditionally set the color based on the status
                if (status.toLowerCase() === 'cancelled') {
                    orderProgressBar.classList.add('bg-red-500');
                } else {
                    // Reset to default color (if previously set to red)
                    orderProgressBar.classList.remove('bg-red-500');
                }
            }

            // Simulate order progress
            setTimeout(() => {
                updateOrderStatus({ text: 'Ordered', color: 'blue' }, 25);
            }, 0);

            setTimeout(() => {
                updateOrderStatus({ text: 'Shipped', color: 'green' }, 50);
            }, 15000);

            setTimeout(() => {
                updateOrderStatus({ text: 'Delivered', color: 'purple' }, 75);
            }, 30000);

            setTimeout(() => {
                updateOrderStatus({ text: 'Cancelled', color: 'red' }, 100);
            }, 50000);
